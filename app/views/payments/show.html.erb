<div class="container mt-5">
  <h1 class="mb-4">Receipt</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h4>Order #<%= @order.id %></h4>
      <p><strong>Full Name:</strong> <%= @order.name %></p>
      <p><strong>Address:</strong> <%= @order.address %>, <%= @order.city %>, <%= @order.province.name %> <%= @order.postal_code %></p>
      <p><strong>Phone:</strong> <%= @order.phone_number %></p>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">Order Items</div>
    <div class="card-body">
      <% @order.order_items.each do |item| %>
        <div class="d-flex justify-content-between mb-2">
          <span><%= item.product_name %> x <%= item.quantity %></span>
          <span><%= number_to_currency(item.price_at_purchase * item.quantity) %></span>
        </div>
      <% end %>

      <hr>
      <div class="d-flex justify-content-between">
        <span>Subtotal:</span>
        <span><%= number_to_currency(@order.subtotal) %></span>
      </div>
      <div class="d-flex justify-content-between">
        <span>GST:</span>
        <span><%= number_to_currency(@order.gst) %></span>
      </div>
      <div class="d-flex justify-content-between">
        <span>PST:</span>
        <span><%= number_to_currency(@order.pst) %></span>
      </div>
      <div class="d-flex justify-content-between">
        <span>HST:</span>
        <span><%= number_to_currency(@order.hst) %></span>
      </div>
      <hr>
      <div class="d-flex justify-content-between fw-bold fs-5">
        <span>Total:</span>
        <span><%= number_to_currency(@order.total) %></span>
      </div>
    </div>
  </div>
</div>
