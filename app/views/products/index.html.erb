<div class="products-page container my-4">

  <!-- Page Heading -->
  <h1 class="mb-3">All Products</h1>

  <!-- Search Form -->
  <div class="search-container mb-4 p-3 bg-white rounded shadow-sm">
    <%= render "shared/search_form" %>
  </div>

  <!-- Filters -->
  <div class="filters-container mb-4 p-3 bg-white rounded shadow-sm">
    <strong>Filters:</strong>
    <%= link_to "All", products_path, class: "filter-link" %> |
    <%= link_to "On Sale", products_path(filter: "on_sale"), class: "filter-link" %> |
    <%= link_to "New", products_path(filter: "new"), class: "filter-link" %> |
    <%= link_to "Recently Updated", products_path(filter: "recently_updated"), class: "filter-link" %> |
    <%= link_to "Valentines", products_path(filter: "valentines"), class: "filter-link" %>
  </div>


  <!-- Products Grid -->
  <div class="products-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <% if product.image.attached? %>
          <%= image_tag product.image, class: "product-image" %>
        <% else %>
          <div class="no-image">No Image</div>
        <% end %>

        <h3><%= link_to product.name, product_path(product) %></h3>
        <p class="product-price"><%= number_to_currency(product.price) %></p>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="pagination-wrapper mt-4 mb-5">
    <%= paginate @products %>
  </div>

</div>